{
	"manifest_version": 2,
	"name": "Boxes",
	"version": "0.1",
	"description": "Create instant email inboxes for signing up to things",
	"icons": {
		"64": "icons/64.png"
	},
	"permissions": ["storage", "https://boxes.taiven.com/*"],
	"browser_action": {
		"default_popup": "popup/index.html",
		"default_area": "navbar"
	},
	"content_scripts": [
		{
			"matches": ["https://boxes.taiven.com/*"],
			"js": ["content-scripts/login.js"]
		}
	]
}
